<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Admin</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel="stylesheet" href="/styles/css/colors.css">
  <link rel="stylesheet" href="/styles/css/admin_items.css">
  <script src="/scripts/admin_items.js"></script>
</head>
<body>
  <header>
    <%- include("../partials/navbar") %>
    <%- include("../partials/admin_navbar") %>
  </header>
  <div class="container">
    <h1>Manage Items</h1>
    <div id="admin-item-add-containter">
      <h2>Upload csv</h2>
      <input type="file" id="admin-item-add-file">

      <h2>Add Item</h2>
      <form class="admin-item-add-form" action="/admin/items" method="post">
        <input type="number" name="quantity" min=1 value=1>
        <input type="text" name="itemname" placeholder="Name">
        <input type="text" name="description" placeholder="Description">
        <input type="text" name="tags" placeholder="Tags">
        <input type="submit" value="Submit">
      </form>
    </div>
    <div id="admin-item-list-container">
      <h2>Manage Items</h2>
      <div class="admin-item-list">
        <% for (var i of items) {%>
          <a id="item-card-<%= i.uid%>" class="item-card" href="/admin/items/<%= i.uid%>">
            <span><%= i.itemname%></span>
            <span><%= i.quantity%></span>
            <span><%= i.description%></span>
            <span class="item-remove">&times;</span>
          </a>
        <% }%>
      </div>
    </div>
  </div>
</body>
</html>