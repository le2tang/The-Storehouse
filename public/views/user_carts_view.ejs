<!DOCTYPE html>
<html>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Edit Cart</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel="stylesheet" href="/styles/css/colors.css">
  <link rel="stylesheet" href="/styles/css/user_carts_view.css" </head>

<body>
  <header>
    <%- include("../partials/navbar") %>
  </header>
  <div id="cart-view-header" class="cart-view-header">
    <h1>
      <%= carts[0].username%>
    </h1>
  </div>
  <div id="cart-view-cart-list" class="cart-view-cart-list">
    <% for (var c of carts) {%>
      <div class="cart-card">
        <h2>Cart <%= c.index%>: <%= c.status%>
        </h2>
        <% for (var i of c.items) {%>
          <div id="item-card-<%= i.uid%>" class="item-card">
            <span>
              <%= i.itemname%>
            </span>
            <span>
              <%= i.quantity%>
            </span>
            <span>
              <%= i.description%>
            </span>
          </div>
          <% }%>
      </div>
      <% }%>
  </div>
</body>

</html>